generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Project{
  id String @id @unique @default(uuid())
  projectName String @db.VarChar(80)
  projectImage String
  description String?
  repositoryLink String 
  applicationLink String
  @@map("projects")
} 

model Tech{
   id String @id @unique @default(uuid())
   techIcon String
   @@map("techs")
}

model ContactIcons{
   id String @id @unique @default(uuid())
   contactIcon String @db.VarChar(200)
   contactName String @db.VarChar(200)
   description String?
   contactLink String
   @@map("contactIcons")
}